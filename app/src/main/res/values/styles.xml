<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for a category of vocabulary words -->
    <style name="CategoryStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">88dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="LandmarksTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/category_landmarks</item>
        <item name="colorPrimaryDark">@color/category_landmarks_dark</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="RestaurantsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/category_restaurants</item>
        <item name="colorPrimaryDark">@color/category_restaurants_dark</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="NightlifeTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/category_nightlife</item>
        <item name="colorPrimaryDark">@color/category_nightlife_dark</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="HotelsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/category_hotels</item>
        <item name="colorPrimaryDark">@color/category_hotels_dark</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

</resources>

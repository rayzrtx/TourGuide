<?xml version="1.0" encoding="utf-8"?>
<!-- This is the layout for each individual view that contains three text views
and a background image of the attraction.-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="186dp"
        android:id="@+id/text_container"
        tools:background="@drawable/saskyline">

        <TextView
            android:id="@+id/attraction_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Attraction Name"
            android:layout_above="@id/attraction_street"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="32dp"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/attraction_street"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="123 Address Lane"
            android:layout_above="@id/attraction_city"
            android:layout_marginLeft="32dp"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/attraction_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="City, State 12345"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="32dp"
            android:layout_marginBottom="16dp"
            android:textColor="#fff" />
    </RelativeLayout>

</LinearLayout>